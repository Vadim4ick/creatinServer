{
  "kind": "collectionType",
  "collectionName": "service_collections",
  "info": {
    "singularName": "service-collection",
    "pluralName": "service-collections",
    "displayName": "ServiceCollection"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "price": {
      "type": "integer",
      "required": true
    },
    "video": {
      "allowedTypes": [
        "videos"
      ],
      "type": "media",
      "multiple": false,
      "required": false
    },
    "textBlocks": {
      "type": "component",
      "repeatable": true,
      "component": "components.text-block"
    },
    "cases": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::case.case",
      "mappedBy": "service_collection"
    },
    "banner": {
      "allowedTypes": [
        "images",
        "videos"
      ],
      "type": "media",
      "multiple": false
    }
  }
}
